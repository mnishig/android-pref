<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="@string/pref_default_web_url"
        android:inputType="textCapWords"
        android:key="web_url"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_web_url" />

    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="@string/pref_default_la365_account"
        android:inputType="number"
        android:key="la365_account"
        android:maxLines="1"
        android:singleLine="true"
        android:title="@string/pref_title_la365_account" />

</PreferenceScreen>
